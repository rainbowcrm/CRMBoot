	<options populator =  "getItemClassTypes"> 
	</options>
   </Element>
	<Element label = "UOM"  type = "UIList" Id = "lstUOM"    isMandatory="true" property ="UomId" externalise= "true" >
		<options populator =  "getUOMs"> 
		</options>
	</Element>
